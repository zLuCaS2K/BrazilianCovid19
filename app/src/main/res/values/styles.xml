<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Home Fragment -->
    <style name="StyleToolbarImageView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:scaleType">fitEnd</item>
        <item name="android:scaleY">-1</item>
        <item name="android:src">@drawable/vector_wave</item>
    </style>

    <style name="ViewCardViewDecoration">
        <item name="android:layout_width">10dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@drawable/model_view_white</item>
    </style>

    <style name="TextViewSupportCardView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="TextViewDataCardView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!-- HomeFragment - Prevenções -->
    <style name="CardViewPreventions">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="TextViewPreventions">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>